<?xml version="1.0" encoding="utf-8"?>
<!-- Premium light Interview screen -->
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="24dp">

        <!-- Header row -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Mock Interview"
            android:textColor="@color/text_primary"
            android:textSize="22sp"
            android:textStyle="bold"
            android:letterSpacing="-0.02"
            app:layout_constraintEnd_toStartOf="@+id/btn_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_accent_badge"
            android:padding="8dp"
            android:src="@drawable/ic_close"
            app:tint="@color/text_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_title"
            app:layout_constraintBottom_toBottomOf="@+id/tv_title" />

        <!-- Question counter -->
        <TextView
            android:id="@+id/tv_question_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Question 1 of 10"
            android:textColor="@color/accent_indigo"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <!-- Progress bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_marginTop="10dp"
            android:max="10"
            android:progress="1"
            android:progressTint="@color/accent_indigo"
            android:progressBackgroundTint="@color/accent_indigo_light"
            app:layout_constraintTop_toBottomOf="@+id/tv_question_counter" />

        <!-- Question card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_white"
            app:layout_constraintTop_toBottomOf="@+id/progress_bar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Indigo left accent bar -->
                <View android:layout_width="5dp" android:layout_height="match_parent"
                    android:background="@drawable/bg_gradient_button" />

                <TextView
                    android:id="@+id/tv_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="&quot; Tell me about a time you had to handle a difficult conflict with a coworker. How did you resolve it? &quot;"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:lineSpacingMultiplier="1.5" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Mic button -->
        <ImageView
            android:id="@+id/btn_mic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_gradient_button"
            android:padding="20dp"
            android:src="@drawable/ic_mic"
            android:elevation="4dp"
            app:tint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_question" />

        <TextView
            android:id="@+id/tv_mic_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tap microphone to speak your answer"
            android:textColor="@color/text_muted"
            android:textSize="13sp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_mic" />

        <!-- Timer pill -->
        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_accent_badge"
            android:paddingHorizontal="18dp"
            android:paddingVertical="7dp"
            android:text="00:00"
            android:textColor="@color/accent_indigo"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_mic_hint" />

        <!-- Answer box -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_answer"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="18dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="@color/bg_white"
            app:layout_constraintTop_toBottomOf="@+id/tv_timer">

            <EditText
                android:id="@+id/et_answer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:padding="16dp"
                android:gravity="top"
                android:hint="Your transcribed answer will appear here, or type manually..."
                android:textColorHint="@color/text_muted"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:inputType="textMultiLine"
                android:scrollbars="vertical" />
        </androidx.cardview.widget.CardView>

        <!-- Next Question button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_gradient_button"
            android:text="Next Question"
            android:textAllCaps="false"
            android:textColor="@color/text_on_accent"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            app:cornerRadius="14dp"
            app:icon="@drawable/ic_arrow_right"
            app:iconGravity="textEnd"
            app:iconTint="@color/text_on_accent"
            app:layout_constraintTop_toBottomOf="@+id/card_answer"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
