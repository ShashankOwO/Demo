<?xml version="1.0" encoding="utf-8"?>
<!-- Premium light Upload Resume -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="40dp">

        <!-- Back button -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/bg_card_glass"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/text_primary"
            android:padding="10dp"
            android:elevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Upload Resume"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/btn_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintTop_toTopOf="@id/btn_back" />

        <!-- Upload drop zone -->
        <androidx.cardview.widget.CardView
            android:id="@+id/upload_container"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_white"
            app:layout_constraintTop_toBottomOf="@id/tv_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_dashed_border">

                <!-- Background glow -->
                <View android:layout_width="100dp" android:layout_height="100dp"
                    android:background="@drawable/bg_gradient_button" android:alpha="0.10"
                    app:layout_constraintBottom_toTopOf="@+id/tv_upload_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.38"
                    app:layout_constraintVertical_chainStyle="packed" />

                <ImageView android:id="@+id/iv_upload"
                    android:layout_width="80dp" android:layout_height="80dp"
                    android:background="@drawable/bg_accent_badge" android:padding="20dp"
                    android:src="@drawable/ic_upload" app:tint="@color/accent_indigo"
                    android:elevation="2dp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_upload_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.38"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView android:id="@+id/tv_upload_title"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginTop="18dp" android:text="Drop your resume here"
                    android:textColor="@color/text_primary" android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/tv_upload_desc"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_upload" />

                <TextView android:id="@+id/tv_upload_desc"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" android:gravity="center"
                    android:text="or tap the button below to browse"
                    android:textColor="@color/text_secondary" android:textSize="13sp"
                    app:layout_constraintBottom_toTopOf="@+id/btn_browse"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_upload_title" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_browse"
                    android:layout_width="wrap_content" android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_gradient_button"
                    android:paddingHorizontal="36dp" android:text="Browse Files"
                    android:textAllCaps="false" android:textColor="@color/text_on_accent"
                    android:textSize="15sp" android:textStyle="bold"
                    app:backgroundTint="@null" app:cornerRadius="12dp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_file_hint"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_upload_desc" />

                <TextView android:id="@+id/tv_file_hint"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" android:text="PDF only · max 5 MB"
                    android:textColor="@color/text_muted" android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_browse" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Loading state -->
        <LinearLayout android:id="@+id/layout_loading"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="20dp" android:gravity="center"
            android:orientation="horizontal" android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/upload_container">
            <ProgressBar android:layout_width="24dp" android:layout_height="24dp"
                android:indeterminateTint="@color/accent_indigo" />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginStart="12dp" android:text="Analysing your resume…"
                android:textColor="@color/accent_indigo" android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Tips title -->
        <TextView android:id="@+id/tv_tips_title"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="28dp" android:text="Resume Tips"
            android:textColor="@color/text_primary" android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_loading" />

        <!-- Tips -->
        <LinearLayout android:id="@+id/tips_container"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="12dp" android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_tips_title">

            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginBottom="10dp"
                app:cardCornerRadius="14dp" app:cardElevation="1dp"
                app:cardBackgroundColor="@color/bg_white">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:padding="16dp" android:orientation="horizontal" android:gravity="center_vertical">
                    <TextView android:layout_width="28dp" android:layout_height="28dp"
                        android:gravity="center" android:text="✓" android:textColor="@color/accent_indigo"
                        android:textStyle="bold" android:textSize="13sp"
                        android:background="@drawable/bg_accent_badge"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:layout_marginStart="14dp"
                        android:text="Use a clean, professional format"
                        android:textColor="@color/text_secondary" android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginBottom="10dp"
                app:cardCornerRadius="14dp" app:cardElevation="1dp"
                app:cardBackgroundColor="@color/bg_white">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:padding="16dp" android:orientation="horizontal" android:gravity="center_vertical">
                    <TextView android:layout_width="28dp" android:layout_height="28dp"
                        android:gravity="center" android:text="✓" android:textColor="@color/accent_indigo"
                        android:textStyle="bold" android:textSize="13sp"
                        android:background="@drawable/bg_accent_badge"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:layout_marginStart="14dp"
                        android:text="Highlight measurable achievements"
                        android:textColor="@color/text_secondary" android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp" app:cardElevation="1dp"
                app:cardBackgroundColor="@color/bg_white">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:padding="16dp" android:orientation="horizontal" android:gravity="center_vertical">
                    <TextView android:layout_width="28dp" android:layout_height="28dp"
                        android:gravity="center" android:text="✓" android:textColor="@color/accent_indigo"
                        android:textStyle="bold" android:textSize="13sp"
                        android:background="@drawable/bg_accent_badge"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                        android:layout_weight="1" android:layout_marginStart="14dp"
                        android:text="Tailor keywords to the job description"
                        android:textColor="@color/text_secondary" android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
