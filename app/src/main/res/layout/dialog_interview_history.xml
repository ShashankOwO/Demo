<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_nav"
    android:paddingTop="20dp"
    android:paddingBottom="16dp"
    android:paddingHorizontal="16dp">

    <!-- Handle bar -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="#E0E0E0"
        android:backgroundTint="#BDBDBD" />

    <!-- Header row: title + close -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Interview History"
            android:textColor="#1A1C1E"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/ic_close"
            android:background="@drawable/bg_grey_light"
            app:tint="#757575"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Stats row: Avg Score + Hours -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <!-- Avg Score card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#EEF4FF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_trending_up"
                        app:tint="#4285F4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="Avg Score"
                        android:textColor="#4285F4"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_avg_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="78%"
                    android:textColor="#1A1C1E"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Hours card -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F5F0FF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="#7C4DFF" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="Hours"
                        android:textColor="#7C4DFF"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5h"
                    android:textColor="#1A1C1E"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Skills Practiced title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skills Practiced"
        android:textColor="#1A1C1E"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Skill rows -->
    <LinearLayout
        android:id="@+id/skills_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <!-- Communication -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginBottom="14dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="6dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Communication" android:textColor="#1A1C1E" android:textSize="14sp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="6 sessions" android:textColor="#9E9E9E" android:textSize="12sp" />
            </LinearLayout>
            <ProgressBar android:id="@+id/pb_communication" style="@style/Widget.AppCompat.ProgressBar.Horizontal" android:layout_width="match_parent" android:layout_height="6dp" android:max="10" android:progress="6" android:progressTint="#4285F4" android:progressBackgroundTint="#E0E0E0" />
        </LinearLayout>

        <!-- Problem Solving -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginBottom="14dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="6dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Problem Solving" android:textColor="#1A1C1E" android:textSize="14sp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5 sessions" android:textColor="#9E9E9E" android:textSize="12sp" />
            </LinearLayout>
            <ProgressBar android:id="@+id/pb_problem_solving" style="@style/Widget.AppCompat.ProgressBar.Horizontal" android:layout_width="match_parent" android:layout_height="6dp" android:max="10" android:progress="5" android:progressTint="#4285F4" android:progressBackgroundTint="#E0E0E0" />
        </LinearLayout>

        <!-- System Design -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginBottom="14dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="6dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="System Design" android:textColor="#1A1C1E" android:textSize="14sp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="4 sessions" android:textColor="#9E9E9E" android:textSize="12sp" />
            </LinearLayout>
            <ProgressBar android:id="@+id/pb_system_design" style="@style/Widget.AppCompat.ProgressBar.Horizontal" android:layout_width="match_parent" android:layout_height="6dp" android:max="10" android:progress="4" android:progressTint="#4285F4" android:progressBackgroundTint="#E0E0E0" />
        </LinearLayout>

        <!-- Technical Depth -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginBottom="14dp">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="6dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Technical Depth" android:textColor="#1A1C1E" android:textSize="14sp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="3 sessions" android:textColor="#9E9E9E" android:textSize="12sp" />
            </LinearLayout>
            <ProgressBar android:id="@+id/pb_technical" style="@style/Widget.AppCompat.ProgressBar.Horizontal" android:layout_width="match_parent" android:layout_height="6dp" android:max="10" android:progress="3" android:progressTint="#4285F4" android:progressBackgroundTint="#E0E0E0" />
        </LinearLayout>

        <!-- Behavioral -->
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="6dp">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Behavioral" android:textColor="#1A1C1E" android:textSize="14sp" />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="2 sessions" android:textColor="#9E9E9E" android:textSize="12sp" />
            </LinearLayout>
            <ProgressBar android:id="@+id/pb_behavioral" style="@style/Widget.AppCompat.ProgressBar.Horizontal" android:layout_width="match_parent" android:layout_height="6dp" android:max="10" android:progress="2" android:progressTint="#4285F4" android:progressBackgroundTint="#E0E0E0" />
        </LinearLayout>

    </LinearLayout>

    <!-- View Full Reports button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_view_reports"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="View Full Reports"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#1A1C1E"
        app:icon="@drawable/ic_document"
        app:iconTint="#1A1C1E"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:cornerRadius="16dp"
        android:backgroundTint="#F5F7FA"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp" />

</LinearLayout>
