<?xml version="1.0" encoding="utf-8"?>
<!-- Premium light Report list item -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/bg_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Left indigo accent bar -->
        <View
            android:id="@+id/v_accent"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_gradient_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_id_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_accent_badge"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="#1"
            android:textColor="@color/accent_indigo"
            android:textStyle="bold"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/v_accent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="1/6/2026"
            android:textColor="@color/text_muted"
            android:textSize="12sp"
            app:drawableStartCompat="@drawable/ic_calendar"
            app:drawableTint="@color/text_muted"
            android:drawablePadding="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_id_badge"
            app:layout_constraintStart_toEndOf="@+id/tv_id_badge"
            app:layout_constraintTop_toTopOf="@+id/tv_id_badge" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_badge_yellow"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="Average"
            android:textColor="#E65100"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginStart="16dp"
            android:text="Technical Communication"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/v_accent"
            app:layout_constraintTop_toBottomOf="@+id/tv_id_badge" />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginStart="16dp"
            android:text="Score: 67/100"
            android:textColor="@color/text_secondary"
            android:textStyle="bold"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/v_accent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/text_muted"
            app:layout_constraintBottom_toBottomOf="@+id/tv_score"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_score" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
