<?xml version="1.0" encoding="utf-8"?>
<!-- Premium light Forgot Password -->
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="32dp">

        <!-- Back row -->
        <ImageView android:id="@+id/btn_back"
            android:layout_width="36dp" android:layout_height="36dp"
            android:background="@drawable/bg_accent_badge" android:padding="8dp"
            android:src="@drawable/ic_arrow_back" app:tint="@color/accent_indigo"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView android:id="@+id/tv_back_label"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginStart="12dp" android:text="Back to Login"
            android:textColor="@color/text_link" android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/btn_back"
            app:layout_constraintStart_toEndOf="@+id/btn_back"
            app:layout_constraintTop_toTopOf="@+id/btn_back" />

        <!-- Form card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/bg_white"
            app:layout_constraintTop_toBottomOf="@+id/btn_back">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <TextView android:id="@+id/tv_title"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="Forgot Password"
                    android:textColor="@color/text_primary" android:textSize="26sp"
                    android:textStyle="bold" android:letterSpacing="-0.02"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView android:id="@+id/tv_description"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Enter your email and we'll send you a reset code."
                    android:textColor="@color/text_secondary" android:textSize="14sp"
                    android:lineSpacingMultiplier="1.4"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title" />

                <TextView android:id="@+id/tv_email_label"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_marginTop="28dp" android:text="Email Address"
                    android:textColor="@color/text_primary" android:textSize="13sp"
                    android:textStyle="bold" android:letterSpacing="0.02"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_description" />

                <EditText android:id="@+id/et_email"
                    android:layout_width="match_parent" android:layout_height="54dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_input_selector"
                    android:hint="john@example.com" android:inputType="textEmailAddress"
                    android:paddingHorizontal="18dp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_muted" android:textSize="15sp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_email_label" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_send_code"
                    android:layout_width="match_parent" android:layout_height="54dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/bg_gradient_button"
                    android:text="Send Reset Code"
                    android:textAllCaps="false" android:textColor="@color/text_on_accent"
                    android:textSize="16sp" android:textStyle="bold"
                    app:backgroundTint="@null" app:cornerRadius="14dp"
                    app:layout_constraintTop_toBottomOf="@+id/et_email" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
